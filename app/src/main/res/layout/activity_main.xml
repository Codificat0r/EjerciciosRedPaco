<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.red.MainActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnConexionHTTP"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Conexión HTTP" />

    <Button
        android:id="@+id/btnConexionAsincrona"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Conexión Asíncrona" />

    <Button
        android:id="@+id/btnConexionAndroidAsincronaHTTPClient"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Conexion Android Asincrona HTTP Client" />

    <Button
        android:id="@+id/btnConexionVolley"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Conexion Volley" />

    <Button
        android:id="@+id/btnDescargaImagenes"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Descarga de imagenes" />

    <Button
        android:id="@+id/btnSubirArchivos"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Subir archivos" />

</LinearLayout>
